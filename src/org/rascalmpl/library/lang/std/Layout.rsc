module lang::std::Layout

extend lang::std::Whitespace;
extend lang::std::Comment;
 
layout Standard 
  = WhitespaceOrComment* !>> [\ \t\n\f\r] !>> "//";
  
syntax WhitespaceOrComment 
  = whitespace: Whitespace
  | comment: Comment
  ; 
