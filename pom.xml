<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<relativePath>../rascal-pom-parent/pom.xml</relativePath>
		<groupId>org.rascalmpl</groupId>
		<artifactId>rascal-pom-parent</artifactId>
		<version>1.1.0-SNAPSHOT</version>
	</parent>

	<artifactId>rascal</artifactId>
	<version>0.8.0-SNAPSHOT</version>
	<packaging>eclipse-plugin</packaging>

	<scm>
		<developerConnection>scm:git:https://github.com/cwi-swat/rascal.git</developerConnection>
	</scm>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<resources>
		  <resource>
		    <directory>src</directory>
		    <excludes>
		      <exclude>**/*.java</exclude>
		      <exclude>**/*.class</exclude>
		    </excludes>
		  </resource>
		  <resource>
		    <directory>.</directory>
		    <filtering>false</filtering>
		    <includes>
		      <include>plugin.xml</include>
		      <include>META-INF/RASCAL.MF</include>
		    </includes>
		  </resource>
		  <resource>
		    <directory>test</directory>
		    <filtering>false</filtering>
		    <includes>
			  <include>org/rascalmpl/test/data/**/*</include>
		    </includes>
		  </resource>
		</resources>
		<testSourceDirectory>test</testSourceDirectory>
		<testResources>
			<testResource>
				<directory>test</directory>
				<excludes>
					<exclude>**/*.java</exclude>
					<exclude>**/*.class</exclude>
				</excludes>
			</testResource>
			<testResource>
				<directory>test/org/rascalmpl/test/data/</directory>
			</testResource>
		</testResources>

		<plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.4.0</version>
                <executions>
                    <execution>
                        <configuration>
                            <executable>java</executable>
                            <classpathScope>compile</classpathScope>
                            <workingDirectory>target/classes/</workingDirectory>
  			    <arguments>
                                <argument>-Xmx256m</argument>
                                <argument>-cp</argument>
                                <classpath/>
                                <argument>org.rascalmpl.library.experiments.Compiler.Commands.Bootstrap</argument>
                                <classpath/>
                                <argument>unstable</argument>
                                <argument>${project.version}</argument>
                                <argument>${project.basedir}/src</argument>
                                <argument>${project.build.directory}/classes</argument>
                            </arguments> 
                        </configuration>
                        <id>bootstrap</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12.4</version>
				<executions>
					<execution>
						<id>test</id>
						<phase>test</phase>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<argLine>
                  		-ea
						-Xmx2g
						-Xss128m
						-Dfile.encoding=UTF-8
					</argLine>
					<includes>
						<include>**/org/rascalmpl/test/AllSuiteParallel.java</include>
					</includes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.4.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
					</execution>
				</executions>
			</plugin>			
		</plugins>
	</build>

	<dependencies>
		<!-- Flattened Dependencies (to avoid nested JARs) -->
		<dependency>
			<groupId>org.rascalmpl</groupId>
			<artifactId>value</artifactId>
			<version>0.5.3</version>
		</dependency>
		<dependency>
			<groupId>io.usethesource</groupId>
			<artifactId>capsule</artifactId>
			<version>0.1.0</version>
		</dependency>
	</dependencies>
</project>
